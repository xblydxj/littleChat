<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/chat_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:text="23:12:23"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/chat_item_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/chat_item_avatar"
            android:background="@drawable/send_msg_normal"
            android:text="asjkdhf阿萨德asdfasdf"
            android:textColor="@color/md_white_color_code"/>
        <ImageView
            android:id="@+id/chat_item_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:src="@drawable/avatar3"/>
        <ImageView
            android:layout_alignTop="@+id/chat_item_avatar"
            android:layout_marginTop="15dp"
            android:id="@+id/chat_item_state"
            android:layout_toLeftOf="@id/chat_item_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>