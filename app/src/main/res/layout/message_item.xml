<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    app:cardElevation="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    >
        <ImageView
            android:id="@+id/message_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/avatar3"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
        >
            <TextView
                android:id="@+id/message_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="name"/>
            <TextView
                android:id="@+id/message_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/message_nickname"
                android:layout_gravity="bottom"
                android:layout_marginTop="42dp"
                android:text="djaskldjflaksjdflaksd"
                android:textColor="@color/md_grey_500_color_code"
            />
            <TextView
                android:id="@+id/message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:text="17:22:32"
                android:textColor="@color/md_grey_400_color_code"/>
            <TextView
                android:id="@+id/message_unread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/round_red"
                android:gravity="center"
                android:text="99"
                android:textColor="@color/md_white_color_code"
                android:textSize="11sp"/>

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
