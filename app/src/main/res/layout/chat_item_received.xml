<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/chat_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:text="23:12:23"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/chat_item_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:src="@drawable/avatar3"/>
        <TextView
            android:id="@+id/chat_item_message"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/chat_item_avatar"
            android:layout_toR="@+id/chat_item_avatar"
            android:text="asjkdhf阿萨德路附近爱丽丝快递asdfasdfasdfasdfasfdasd劫"
            android:background="@drawable/receive_msg_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>